{
  // ğŸ Pipenv + entorno
  "python.terminal.activateEnvironment": true,
  "python.envFile": "${workspaceFolder}/backend/.env",
  // ğŸ” Type checking (Pylance)
  "python.analysis.typeCheckingMode": "basic",
  // ğŸ§¹ Linting con Ruff (nuevo sistema)
  "ruff.enable": true,
  "ruff.lint.enable": true,
  "ruff.format.enable": false,
  // ğŸ¨ Formato con Black
  "[python]": {
    "editor.defaultFormatter": "ms-python.black-formatter"
  },
  "editor.formatOnSave": true,
  // ğŸ§ª Tests (si se usa Pytest)
  "python.testing.pytestEnabled": true,
  "python.testing.unittestEnabled": false,
  "python.testing.pytestArgs": [
    "backend"
  ],
  // ğŸ§  Cosas del editor
  "files.trimTrailingWhitespace": true,
  "files.insertFinalNewline": true,
  "editor.tabSize": 4,
  "editor.detectIndentation": false,
  //IntÃ©rprete de Python
  "python.defaultInterpreterPath": "C:\\Users\\Usuario\\Desktop\\fhir-gateway-viewer-lite\\apps\\api\\.venv\\Scripts\\python.exe",
  "python.analysis.extraPaths": [
    "apps/api/src"
  ]
}
